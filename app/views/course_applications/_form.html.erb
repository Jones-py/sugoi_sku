<%= form_with(model: course_application, local: true) do |form| %>
  <% if course_application.errors.any? %>
    <div id="error_explanation">
      <h4><%= course_application.errors.count %> Errors Present.</h4>
      <ul>
      <% course_application.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :category%>
    <%= form.text_field :category%>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
