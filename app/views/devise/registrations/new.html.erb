<div class="page">
  <h5><%= t('.sign_up') %></h5>

  <%=form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= bootstrap_devise_error_messages! %>

    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: 'first_name', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: 'last_name', class: 'form-control' %>
    </div>
    <div class="form-group" ><%= f.check_box :is_female, {}, true %> <%= f.label :is_female, "Female"%></div>
    <div class="form-group"><%= f.check_box :is_female, {}, false %> <%= f.label :is_female, "Male"%></div>

    <%=f.label :date_of_birth%>
    <div class="form-group">
    <%=f.date_select :date_of_birth, hide_label: true, class: 'datepicker' %>
   </div>

    <div class="form-group">
      <%= f.label :mobile_number%>
      <%= f.text_field :mobile_number, autofocus: true, autocomplete: 'mobile_number', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.text_field :password, autocomplete: 'current-password', class: 'form-control' %>

      <% if @minimum_password_length %>
        <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.text_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
